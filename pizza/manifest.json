{
	"manifest_version": 2,

	"name": "Experimental Pizza",
	"description": "Plugin to easily toggle a test body class",
	"version": "1.1",
	"options_page": "options.html",

	"permissions": [
		"tabs",
		"*://*/*",
		"file:///*/*",
		"storage"
	],

	"background": {
		"scripts": ["pizzaStore.js", "background.js"],
		"persistent": true
	},

	"browser_action": {
		"default_title": "body.pizza",
		"default_icon": "images/pizzaOff.png"
	}
}
